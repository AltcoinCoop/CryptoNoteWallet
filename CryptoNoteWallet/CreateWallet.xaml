<Window x:Class="CryptoNoteWallet.CreateWallet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Wallet" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Icon="pack://application:,,,/Resources/Wallet.png" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Wallet name:" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" Grid.Column="0" Grid.Row="0"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"  Grid.Row="0"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" Width="74" Grid.Column="0" Grid.Row="1" Click="btnCreate_Click" Height="22"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="10,10,10,10" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" Height="22" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
