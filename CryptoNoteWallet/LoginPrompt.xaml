<Window x:Class="CryptoNoteWallet.LoginPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter password" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Icon="pack://application:,,,/Resources/Wallet.png" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" Grid.Column="0" />
        <PasswordBox x:Name="tbPassword" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" Grid.Column="1" Width="195" KeyUp="tbPassword_KeyUp"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="10,41,10,10" VerticalAlignment="Top" Width="75" Grid.Column="0" Click="btnOpen_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="10,41,10,10" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="btnCancel_Click"/>

    </Grid>
</Window>
